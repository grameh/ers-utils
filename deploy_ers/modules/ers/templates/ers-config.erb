; Configuration file for an ERS node

;
; General parameters for the node
;
[node]
; A node can be either a "contributor" or a "bridge"
type = contributor
; PID file for this ERS daemon instance (or 'none')
pid_file = none

;
; Specific parameters for bridges
;
[bridge-node]

;
; Specific parameters for contributors
;
[contributor-node]

;
; Parameters related to CouchDB
;
[couchdb]
; The port at which CouchDB is running
port = 5984
; Numer of connection tries
tries = 10
; Prefix used for tables related to ERS
prefix = ers

;
; Log configuration
;
[log]
; The log output (own file vs. syslog)
output = none; /var/log/ers/daemon.log
; Log level ('debug', 'info', 'warning', 'error' or 'critical')
level = debug

